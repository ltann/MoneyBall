<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/LinearLayout1"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DareActivity">>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0">

        <ImageView
            android:id="@+id/rouletteImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:src="@drawable/blank_roulette" />



        <ImageView
            android:id="@+id/imageSelected"
            android:layout_width="121dp"
            android:layout_height="93dp"
            android:layout_above="@+id/rouletteImage"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="145dp"
            android:layout_marginBottom="-36dp"
            android:src="@drawable/selected1"
            android:layout_marginRight="145dp"
            android:layout_alignParentRight="true" />

        <Button

            android:id="@+id/buttonStart"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rouletteImage"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="194dp"
            android:layout_marginRight="194dp"
            android:onClick="onClickButtonRotation"
            android:text="Click for Dare"
            android:background="@color/colorGreen"/>

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="11dp"
            android:text="Upload Dare"
            android:layout_alignParentRight="true"
            android:onClick="onButtonClick"
            android:layout_marginRight="11dp"
            android:background="@color/colorGreen"/>

        <RelativeLayout
            android:id="@+id/tvLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/rouletteImage"
            android:layout_alignBottom="@+id/rouletteImage"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp">

            <TextView
                android:id="@+id/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="157dp"
                android:layout_marginBottom="342dp"
                android:background="@color/colorGreenDark"
                android:rotation="90"
                android:text="Red Challenge"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="59dp"
                android:layout_marginTop="130dp"
                android:layout_marginBottom="248dp"
                android:background="@color/colorGreenDark"
                android:rotation="35"
                android:text="Purple Challenge"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="55dp"
                android:layout_marginTop="248dp"
                android:background="@color/colorGreenDark"
                android:rotation="-35"
                android:text="Blue Challenge"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="156dp"
                android:layout_marginTop="314dp"
                android:layout_marginBottom="62dp"
                android:background="@color/colorGreenDark"
                android:rotation="90"
                android:text="Green Challenge"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="249dp"
                android:layout_marginEnd="64dp"
                android:background="@color/colorGreenLight"
                android:rotation="35"
                android:text="Yellow Challenge"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="141dp"
                android:layout_marginEnd="57dp"
                android:layout_marginBottom="230dp"
                android:background="@color/colorGreenDark"
                android:rotation="-35"
                android:text="Orange Challenge"
                android:textColor="@color/colorWhite" />
        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>
